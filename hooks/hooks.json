{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/hooks.json",
  "hooks": [
    {
      "event": "PreToolUse",
      "matcher": {
        "tool_name": ["Write", "Edit"]
      },
      "command": "${CLAUDE_PLUGIN_ROOT}/../hooks/check-approved-spec.sh",
      "timeout": 5000,
      "description": "Blocks implementation file edits without an approved spec. Disable to skip approval workflow.",
      "enabled": true
    }
  ]
}
